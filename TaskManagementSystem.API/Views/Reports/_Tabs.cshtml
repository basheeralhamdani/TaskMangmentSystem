@{
    var action = (string?)(ViewContext.RouteData.Values["action"]) ?? string.Empty;
    Func<string, string> tabClass = (act) => action.Equals(act, StringComparison.OrdinalIgnoreCase)
        ? "px-4 py-2 text-sm font-medium rounded-t-md border-b-2 border-blue-600 text-blue-700"
        : "px-4 py-2 text-sm font-medium rounded-t-md text-gray-600 hover:text-gray-800 border-b-2 border-transparent hover:border-gray-300";
}

<div class="border-b border-gray-200 mb-6">
    <nav class="flex space-x-4">
        <a asp-controller="Reports" asp-action="Index" class="@tabClass("Index")">Overview</a>
        <a asp-controller="Reports" asp-action="TaskStatistics" class="@tabClass("TaskStatistics")">Statistics</a>
    </nav>
</div>

